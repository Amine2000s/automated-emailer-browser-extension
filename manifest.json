{
    "manifest_version": 2,
    "name": "emailer",
    "version": "1.0",
    "description": "emailer is an automation tool for sending emails to multiple clients at the same time.",
  
    "icons": {
      "48": "icons/email.png"
    },
  
    "permissions": [
      "tabs"
    ],
  
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  
    "browser_action": {
      "default_icon": "icons/email.png",
      "default_title": "emailer"
    }
  }
  